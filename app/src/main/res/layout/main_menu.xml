<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey">

    <ImageButton
        android:id="@+id/button_decks"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_column="0"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_row="0"
        android:background="@color/dark_grey"
        android:scaleType="fitXY"
        android:src="@drawable/deck" />

    <TextView
        android:id="@+id/text_decks"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="40dp"
        android:layout_row="1"
        android:text="DECKS"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/primary_font_color"/>

    <ImageButton
        android:id="@+id/button_cards"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_column="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:layout_row="0"
        android:background="@color/dark_grey"
        android:scaleType="fitXY"
        android:src="@drawable/card" />

    <TextView
        android:id="@+id/text_cards"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginLeft="40dp"
        android:layout_row="1"
        android:text="CARDS"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/primary_font_color"/>

    <ImageButton
        android:id="@+id/button_expansions"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_column="0"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:layout_row="2"
        android:background="@color/dark_grey"
        android:scaleType="fitXY"
        android:src="@drawable/expansions" />

    <TextView
        android:id="@+id/text_expansions"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="40dp"
        android:layout_row="3"
        android:text="EXPANSIONS"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/primary_font_color"/>

    <ImageButton
        android:id="@+id/button_adventures"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_column="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:layout_row="2"
        android:background="@color/dark_grey"
        android:scaleType="fitXY"
        android:src="@drawable/adventures" />

    <TextView
        android:id="@+id/text_adventures"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginLeft="40dp"
        android:layout_row="3"
        android:text="ADVENTURES"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/primary_font_color"/>

    <ImageButton
        android:id="@+id/button_reddit"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_column="0"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:layout_row="4"
        android:background="@color/dark_grey"
        android:scaleType="fitXY"
        android:src="@drawable/reddit" />

    <TextView
        android:id="@+id/text_reddit"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="40dp"
        android:layout_row="5"
        android:text="REDDIT"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/primary_font_color"/>

    <ImageButton
        android:id="@+id/button_position"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_column="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:layout_row="4"
        android:background="@color/dark_grey"
        android:scaleType="fitXY"
        android:src="@drawable/position" />

    <TextView
        android:id="@+id/text_position"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginLeft="40dp"
        android:layout_row="5"
        android:text="POSITION"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/primary_font_color"/>

</GridLayout>